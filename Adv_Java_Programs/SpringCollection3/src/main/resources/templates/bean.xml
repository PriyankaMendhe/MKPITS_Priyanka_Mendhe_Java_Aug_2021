<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="eob" class="com.example.springcollection3.Employee">
        <constructor-arg index="1" value="Priyanka"/>
        <constructor-arg index="0" value="1"/>

    </bean>

    <bean id="rob" class="com.example.springcollection3.Report">
        <property name="employeeMap">
            <map>
                <entry key="100">
                    <bean class="com.example.springcollection3.Employee">
                        <constructor-arg index="1" value="Priyanka1"/>
                        <constructor-arg index="0" value="2"/>

                    </bean>
                </entry>
                <entry key="200">
                    <bean class="com.example.springcollection3.Employee">
                        <constructor-arg index="1" value="Priyanka2"/>
                        <constructor-arg index="0" value="3"/>

                    </bean>
                </entry>

            </map>
        </property>




    </bean>
</beans>